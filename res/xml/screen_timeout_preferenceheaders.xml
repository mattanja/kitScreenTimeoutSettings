<preference-headers
        xmlns:android="http://schemas.android.com/apk/res/android">

    <header android:fragment="de.kernetics.android.screenTimeoutSettings.MainActivity$ScreenTimeoutSettings"
            android:icon="@drawable/actionbar_compat_item"
            android:title="Screen timeout settings"
            android:summary="Update screen timeout options and settings." />

    <header android:icon="@drawable/ic_action_share"
            android:title="(Re-)Start service"
            android:summary="(Re-)Start service">
        <intent android:targetPackage="de.kernetics.android.screenTimeoutSettings"
                android:targetClass="de.kernetics.android.screenTimeoutSettings.WatchServiceActivity"
                />
    </header>
    
    <header android:icon="@drawable/ic_action_share"
            android:title="kernetics.de"
            android:summary="Visit website.">
        <intent android:action="android.intent.action.VIEW"
                android:data="http://www.kernetics.de/apps/" />
    </header>

</preference-headers>